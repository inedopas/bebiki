{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
          <button type="submit" form="form-butik" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
      {% if success %}
      <div class="alert alert-success"><i class="fa fa-check"></i> {{ success }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %}
    <div class="panel panel-default alert-helper">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-blog-setting" class="form-horizontal">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-list" data-toggle="tab">{{ entry_list }}</a></li>
            <li class=""><a href="#tab-form" data-toggle="tab">{{ entry_form }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-list">
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_description_limit }}</label>
                <div class="col-sm-10">
                  <input type="text" name="blog_description_limit" value="{{ blog_description_limit }}" placeholder="{{ entry_description_limit }}" class="form-control">
                    {% if error_blog_description_limit %}
                    <div class="text-danger">{{ error_blog_description_limit }}</div>
                    {% endif %}
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_blog_limit }}</label>
                <div class="col-sm-10">
                  <input type="text" name="blog_limit" value="{{ blog_limit }}" placeholder="{{ entry_blog_limit }}" class="form-control">
                    {% if error_blog_limit %}
                    <div class="text-danger">{{ error_blog_limit }}</div>
                    {% endif %}
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_image_size }}</label>
                <div class="col-sm-10">
                  <div class="row">
                    <div class="col-sm-6">
                       <input type="text" name="blog_image_list_width" value="{{ blog_image_list_width }}" placeholder="{{ entry_image_width }}" class="form-control">
                        {% if error_blog_image_list_width %}
                        <div class="text-danger">{{ error_blog_image_list_width }}</div>
                        {% endif %}
                    </div>
                    <div class="col-sm-6">
                       <input type="text" name="blog_image_list_height" value="{{ blog_image_list_height }}" placeholder="{{ entry_image_height }}" class="form-control">
                        {% if error_blog_image_list_height %}
                        <div class="text-danger">{{ error_blog_image_list_height }}</div>
                        {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-form">
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_image_size }}</label>
                <div class="col-sm-10">
                  <div class="row">
                    <div class="col-sm-6">
                      <input type="text" name="blog_image_form_width" value="{{ blog_image_form_width }}" placeholder="{{ entry_image_width }}" class="form-control">
                      {% if error_blog_image_form_width %}
                      <div class="text-danger">{{ error_blog_image_form_width }}</div>
                      {% endif %}
                    </div>
                    <div class="col-sm-6">
                      <input type="text" name="blog_image_form_height" value="{{ blog_image_form_height }}" placeholder="{{ entry_image_height }}" class="form-control">
                      {% if error_blog_image_form_height %}
                      <div class="text-danger">{{ error_blog_image_form_height }}</div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
              <fieldset>
                <legend>{{ entry_soc_code }}</legend>
                <div class="form-group">
                  <div class="col-sm-12">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-code"></i></span>
                      <textarea name="blog_soc_code" rows="5" class="form-control">{{ blog_soc_code }}</textarea>
                    </div>
                  </div>
                </div>
              </fieldset>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}