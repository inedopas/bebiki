<div class="slideshow-home">
<div id="butik_slideshow{{ module }}" class="owl-carousel" style="opacity: 1;">
  {% for banners_add in banners_added %}
  <div class="item">
    <div class="slideshow-text {{ banners_add.text_position }}" style="color:#<?php echo $banners_color_text; ?>;text-shadow: 1px 1px 2px black;">
      <div class="title">{{ banners_add.title }}</div>
      <div class="description">{{ banners_add.description }}</div>
      {% if banners_add.link is not empty and banners_add.button is not empty %}
      <a href="{{ banners_add.link }}" class="btn btn-primary">{{ banners_add.button }}</a>
      {% endif %}
    </div>
    <img src="{{ banners_add.image }}" alt="{{ banners_add.title }}" class="img-responsive" />
  </div>
  {% endfor %}
</div>
</div>
<script type="text/javascript"><!--
$('#butik_slideshow{{ module }}').owlCarousel({
    items: 6,
    transitionStyle: '{{ transition_style }}',
    autoPlay: {{ banners_auto_play }},
    singleItem: true,
    navigation: {{ banners_navigation is not empty ? 'true' : 'false' }},
    navigationText: ['<i class="fa fa-chevron-left fa-5x"></i>', '<i class="fa fa-chevron-right fa-5x"></i>'],
    pagination: {{ banners_pagination is not empty ? 'true' : 'false' }},
    stopOnHover: {{ banners_hover is not empty ? 'true' : 'false' }}
});
--></script>